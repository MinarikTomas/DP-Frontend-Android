<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input_style">
        <item name="hintTextColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="placeholderTextColor">#159835</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>

    </style>
    <style name="button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="switch_style">
        <item name="android:background">@drawable/switch_item_bg</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="activity_label">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="activity_data">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="profile_textview">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
</resources>