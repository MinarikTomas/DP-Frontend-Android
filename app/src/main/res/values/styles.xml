<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input_style">
        <item name="hintTextColor">@color/blue</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
    </style>
    <style name="button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="switch_style">
        <item name="android:background">@drawable/switch_item_bg</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>